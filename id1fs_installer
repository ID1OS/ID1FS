#!/bin/bash
username=$(whoami)
echo "Installing id1fs..."
echo "Installing dependencies..."
sudo apt-get install git
sudo apt install python3
sudo apt install python3-pip
pip3 install click
ID1FS_dir="/home/$username/.id1fs"
Home_dir="/home/$username"
sudo rm -rvf $ID1FS_dir
sudo mkdir -p $Home_dir
sudo chown $username $Home_dir
mkdir -p $ID1FS_dir
cd $ID1FS_dir
git clone https://github.com/Oussamaend34/ID1FS.git
cd ID1FS
mkdir backup
mkdir metadata
mkdir home
chmod +x src/*
python3 setup.py install
rm -f setup.py
rm -f README.md
rm -f .gitignore
rm -rf .git
rm -rf id1fs_installer
cd $Home_dir
cat >> .bashrc << "EOF"
export ID1FS_dir="/home/$(whoami)/.id1fs"
id1fs_start(){
    $ID1FS_dir/ID1FS/src/id1fs -S && source $ID1FS_dir/ID1FS/system/layout && PATH=$ID1FS_dir/ID1FS/src && source $ID1FS_dir/ID1FS/src/disable_builtin_commands
}
id1fs_stop(){
    $ID1FS_dir/ID1FS/src/id1fs -q && source /etc/environment && cd ~ && source ~/.bashrc && source $ID1FS_dir/ID1FS/src/enable_builtin_commands
}
EOF
source ~/.bashrc
echo "id1fs installed successfully"